<div class="w-full">
  <% if notice.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
  <% end %>
  <% if alert.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-red-500 rounded-lg bg-red-50" id="notice"><%= alert %></p>
  <% end %>

  <div class="flex items-center justify-between">
    <h1 class="text-4xl font-bold">Heartbeats</h1>
  </div>

  <div id="heartbeats" class="flex min-w-full gap-4">
    <%= render @heartbeats %>
  </div>
  <%= link_to "Back to server", server_path(@server), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
