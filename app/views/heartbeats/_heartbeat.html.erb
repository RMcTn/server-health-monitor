<div id="<%= dom_id heartbeat %>">
  <p><%= heartbeat.status_code %></p>
  <p><%= heartbeat.request_time %></p>
  <% if action_name != "show" %>
    <%= link_to "Show this heartbeat", server_heartbeat_path(@server, heartbeat), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
