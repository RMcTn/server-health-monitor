<%= form_for [@server, Heartbeat.new] do |form| %>
  <% if heartbeat.errors.any? %>
    <div id="error_explanation" class="px-3 py-2 mt-3 font-medium text-red-500 rounded-lg bg-red-50">
      <h2><%= pluralize(heartbeat.errors.count, "error") %> prohibited this heartbeat from being saved:</h2>

      <ul>
