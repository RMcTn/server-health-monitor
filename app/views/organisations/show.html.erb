<div class="w-full mx-auto justify-left md:w-2/3">
  <div class="mx-auto">
    <%= turbo_stream_from @organisation %>
    <% if notice.present? %>
      <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
      <p class="inline-block px-3 py-2 mb-5 font-medium text-red-500 rounded-lg bg-red-50" id="notice"><%= alert %></p>
    <% end %>


    <%= render @organisation %>
    
    <div class="flex flex-wrap gap-4">
      <%= link_to 'Edit this organisation', edit_organisation_path(@organisation), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <%= button_to 'Destroy this organisation', organisation_path(@organisation), method: :delete, class: "inline-block mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
      <%= link_to 'Back to organisations', organisations_path, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <%= link_to 'New server', new_organisation_server_path(@organisation), class: "mt-2 rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium" %>
    </div>
  </div>
  <div class="flex flex-col py-4 gap-2">
    <%= render "problems", organisation: @organisation %>
    <%= render "warnings", organisation: @organisation %>
    <%= render "healthy_servers", organisation: @organisation %>
  </div>
</div>
