<div class="w-full">
  <% if notice.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
  <% end %>
  <% if alert.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-red-500 rounded-lg bg-red-50" id="notice"><%= alert %></p>
  <% end %>

  <div class="flex items-center justify-between">
    <h1 class="text-4xl font-bold">Servers</h1>
    <%= link_to 'Back to organisations', organisations_path, class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium"%>
    <%= link_to 'New server', new_organisation_server_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="servers" class="min-w-full">
    <%= render @servers, organisation: @organisation %>
  </div>
</div>
