<% status_indicator_color = "bg-green-500" %>
<% if server.recent_failure? %>
  <% status_indicator_color = "bg-orange-500" %>
<% end %>
<% if server.last_request_failed? %>
  <% status_indicator_color = "bg-red-500" %>
<% end %>

<div id="<%= dom_id(server) + "-server-header" %>"class="">
  <%= turbo_stream_from server %>
  <p class="inline my-5">
  <strong class="block mb-1 font-medium">Hostname:</strong>
  <%= server.hostname %>
  </p>
  <div class="w-4 h-4 <%= status_indicator_color %> rounded-full">
</div>
